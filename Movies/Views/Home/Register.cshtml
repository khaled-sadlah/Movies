@model Movies.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5" style="max-width:650px;">
        <div class="card p-4 shadow-sm">
            <h3 class="mb-3">Register</h3>

            @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger">@ViewBag.msg</div>
            }

            <form method="post" action="/Home/Register">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Full Name</label>
                        <input asp-for="userFname" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Username</label>
                        <input asp-for="userName" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="userEmail" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="userPass" type="password" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Birth Date</label>
                        <input asp-for="userBirthDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Gender</label>
                        <select asp-for="userGender" class="form-select">
                            <option value="">--</option>
                            <option value="male">male</option>
                            <option value="female">female</option>
                        </select>
                    </div>
                </div>

                <button class="btn btn-dark w-100" type="submit">Create Account</button>
            </form>

            <div class="mt-3 text-center">
                <a href="/Home/Login">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
